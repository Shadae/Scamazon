
<div class='category_form'>
  Can't find an appropriate category? Make one here.

  <div class='space'>
  <%= form_for(@category) do |f| %>
    <%= f.text_field :category %>
    <br>
  </div>
   <div class='space'>
    <%= f.hidden_field :product_id, value: @product.id %>
    <br>
    <%= f.submit "Make Category" %>
  </div>
  <% end %>
</div>