<div class='product_new'>
<% @product.errors.full_messages.each do |error| %>
  <%= error %><br>
<% end %>
<br>

<div class="space">
 <%= form_for(@product) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
</div>

<div class="space">
  <%= f.label :description %><br>
  <%= f.text_area :description, size: "20x8" %>
  <br>
</div>

<div class="space">
  <%= f.label :price %>
  <%= f.number_field :price %> <br>(in pennies, pls!)
  <br>
</div>

<div class="space">
  Pick as many categories as you deem appropriate.<br>
  <%= f.select(:categories, Category.all.collect { |p| [p.category, p.id] }, { selected: @product.categories.collect{ |i| i.id }}, {:multiple => true}) %>
  <br>
</div>  

<div class="space">
  How many items do you have in stock?<br>
  <%= f.number_field :stock %> 
</div>

<div class="space">
  What's the weight of the product?<br>
  <%= f.number_field :weight %> 
</div>

<div class="space">
  What's the height of the product?<br>
  <%= f.number_field :height %> 
</div>

<div class="space">
  What's the lenth of the product?<br>
  <%= f.number_field :length %> 
</div>

<div class="space">
  What's the depth of the product?<br>
  <%= f.number_field :depth %> 
</div>


<div class="space">
  <%= f.label :image, "Upload local file:" %><br />
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
</div>
<div class='space'>
  <%= f.submit 'submit'%>
    <% end %>
</div>
  </div>